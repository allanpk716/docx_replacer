<Window x:Class="DocuFiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DocuFiller.Views"
        xmlns:updateViews="clr-namespace:DocuFiller.Views.Update"
        mc:Ignorable="d"
        Title="DocuFiller - Word文档批量填充工具" Height="900" Width="1400"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="Word文档批量填充工具"
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Foreground="#2C3E50"/>
        </StackPanel>

        <!-- 主要内容区域 -->
        <TabControl Grid.Row="1" Margin="0,0,0,10" FontSize="16">
            
            <!-- 文件设置选项卡 -->
            <TabItem Header="关键词替换" FontSize="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    
                    <!-- 模板文件选择 -->
                    <GroupBox Grid.Row="0" Header="模板文件/文件夹" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,15" FontSize="16">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 路径显示 -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <TextBox x:Name="TemplatePathTextBox"
                                         Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding TemplatePath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" FontSize="14"/>
                            </Grid>
                            
                            <!-- 文件拖拽区域 -->
                            <Border Grid.Row="1" x:Name="TemplateDropBorder"
                                    BorderBrush="#BDC3C7" BorderThickness="2"
                                    CornerRadius="4" Height="80"
                                    AllowDrop="True"
                                    Drop="TemplateDropBorder_Drop"
                                    DragEnter="TemplateDropBorder_DragEnter"
                                    DragLeave="TemplateDropBorder_DragLeave"
                                    DragOver="TemplateDropBorder_DragOver">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock x:Name="TemplateDropHint"
                                                   Text="拖拽单个 docx 文件或包含 docx 文件的文件夹到此处"
                                                   Foreground="#95A5A6"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,5"/>
                                        <TextBlock Text="{Binding TemplateFolderPath}" 
                                                   Foreground="#2C3E50" 
                                                   FontWeight="Medium"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0"
                                                   Visibility="{Binding TemplateFolderPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        <TextBlock Text="找到 {Binding FoundDocxFilesCount} 个DOCX文件" 
                                                   Foreground="#27AE60" 
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Margin="10,5"
                                                   Visibility="{Binding FoundDocxFilesCount, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </GroupBox>
                    
                    <!-- 数据文件选择 -->
                    <GroupBox Grid.Row="1" Header="数据文件" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,15" FontSize="16">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 路径显示 -->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0"
                                         Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding DataPath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" FontSize="14"/>
                                <TextBlock Grid.Row="1"
                                           Text="{Binding DataFileTypeDisplay, StringFormat='数据类型: {0}'}"
                                           Margin="0,5,0,0"
                                           FontSize="12"
                                           Foreground="#7F8C8D"
                                           Visibility="{Binding DataPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </Grid>

                            <!-- 数据文件拖拽区域 -->
                            <Border Grid.Row="1" x:Name="DataFileDropBorder"
                                    BorderBrush="#BDC3C7" BorderThickness="2"
                                    CornerRadius="4" Height="70" Margin="0,0,0,10"
                                    AllowDrop="True"
                                    Drop="DataFileDropBorder_Drop"
                                    DragEnter="DataFileDropBorder_DragEnter"
                                    DragLeave="DataFileDropBorder_DragLeave"
                                    DragOver="DataFileDropBorder_DragOver">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock x:Name="DataFileDropHint"
                                                   Text="拖拽 JSON 或 Excel 数据文件到此处"
                                                   Foreground="#95A5A6"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,5"/>
                                        <TextBlock Text="{Binding DataPath}"
                                                   Foreground="#2C3E50"
                                                   FontWeight="Medium"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0"
                                                   Visibility="{Binding DataPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            

                        </Grid>
                    </GroupBox>
                    
                    <!-- 输出设置 -->
                    <GroupBox Grid.Row="2" Header="输出设置" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,10" FontSize="16">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 输出目录 -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="输出目录:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0" FontWeight="Medium"/>
                                
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" Margin="0,0,15,0" FontSize="14"/>
                                
                                <Button Grid.Column="2" Content="浏览..." 
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding BrowseOutputCommand}"
                                        Width="90" Height="40" FontSize="14"/>
                            </Grid>
                            

                        </Grid>
                    </GroupBox>
                    
                    <!-- 文件信息显示 - 已隐藏以节省空间 -->
                    <!--
                    <GroupBox Grid.Row="3" Header="文件信息" Style="{StaticResource GroupBoxStyle}" Height="150" FontSize="16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                            <StackPanel>
                                <TextBlock Text="{Binding FileInfoText}" 
                                           TextWrapping="Wrap" 
                                           FontFamily="Consolas" 
                                           FontSize="14" 
                                           Foreground="#34495E"/>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                    -->
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>