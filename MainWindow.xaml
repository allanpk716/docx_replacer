<Window x:Class="DocuFiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DocuFiller.Views"
        xmlns:updateViews="clr-namespace:DocuFiller.Views.Update"
        mc:Ignorable="d"
        Title="DocuFiller - Word文档批量填充工具" Height="900" Width="1400"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 菜单栏 -->
        <Menu Grid.Row="0">
            <MenuItem Header="工具">
                <MenuItem Header="审核清理" Command="{Binding OpenCleanupCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- 更新横幅 -->
        <updateViews:UpdateBannerView Grid.Row="0"
                                     DataContext="{Binding UpdateBanner}"
                                     Visibility="{Binding UpdateBanner.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Margin="0,0,0,10"/>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="Word文档批量填充工具" 
                       FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10" 
                       Foreground="#2C3E50"/>
            
            <!-- 功能链接区域 -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Margin="0,0,30,0">
                    <Hyperlink x:Name="KeywordEditorHyperlink"
                               Click="KeywordEditorHyperlink_Click"
                               Foreground="#3498DB"
                               TextDecorations="Underline">
                        <Run Text="关键词编辑器" FontSize="15" FontWeight="Medium"/>
                    </Hyperlink>
                </TextBlock>
                <TextBlock Margin="0,0,30,0">
                    <Hyperlink x:Name="ConverterHyperlink"
                               Click="ConverterHyperlink_Click"
                               Foreground="#E67E22"
                               TextDecorations="Underline">
                        <Run Text="JSON转Excel转换工具" FontSize="15" FontWeight="Medium"/>
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink x:Name="CheckForUpdateHyperlink"
                               Click="CheckForUpdateHyperlink_Click"
                               Foreground="#27AE60"
                               TextDecorations="Underline">
                        <Run Text="检查更新" FontSize="15" FontWeight="Medium"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
        
        <!-- 主要内容区域 -->
        <TabControl Grid.Row="1" Margin="0,0,0,10" FontSize="16">
            
            <!-- 文件设置选项卡 -->
            <TabItem Header="文件设置" FontSize="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    
                    <!-- 模板文件选择 -->
                    <GroupBox Grid.Row="0" Header="模板文件/文件夹" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,15" FontSize="16">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 路径显示 -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <TextBox x:Name="TemplatePathTextBox"
                                         Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding TemplatePath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" FontSize="14"/>
                            </Grid>
                            
                            <!-- 文件拖拽区域 -->
                            <Border Grid.Row="1" x:Name="TemplateDropBorder"
                                    BorderBrush="#BDC3C7" BorderThickness="2"
                                    CornerRadius="4" Height="80"
                                    AllowDrop="True"
                                    Drop="TemplateDropBorder_Drop"
                                    DragEnter="TemplateDropBorder_DragEnter"
                                    DragLeave="TemplateDropBorder_DragLeave"
                                    DragOver="TemplateDropBorder_DragOver">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock x:Name="TemplateDropHint"
                                                   Text="拖拽单个 docx 文件或包含 docx 文件的文件夹到此处"
                                                   Foreground="#95A5A6"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,5"/>
                                        <TextBlock Text="{Binding TemplateFolderPath}" 
                                                   Foreground="#2C3E50" 
                                                   FontWeight="Medium"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0"
                                                   Visibility="{Binding TemplateFolderPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        <TextBlock Text="找到 {Binding FoundDocxFilesCount} 个DOCX文件" 
                                                   Foreground="#27AE60" 
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Margin="10,5"
                                                   Visibility="{Binding FoundDocxFilesCount, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </GroupBox>
                    
                    <!-- 数据文件选择 -->
                    <GroupBox Grid.Row="1" Header="数据文件" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,15" FontSize="16">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 路径显示 -->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0"
                                         Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding DataPath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" FontSize="14"/>
                                <TextBlock Grid.Row="1"
                                           Text="{Binding DataFileTypeDisplay, StringFormat='数据类型: {0}'}"
                                           Margin="0,5,0,0"
                                           FontSize="12"
                                           Foreground="#7F8C8D"
                                           Visibility="{Binding DataPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </Grid>

                            <!-- 数据文件拖拽区域 -->
                            <Border Grid.Row="1" x:Name="DataFileDropBorder"
                                    BorderBrush="#BDC3C7" BorderThickness="2"
                                    CornerRadius="4" Height="70" Margin="0,0,0,10"
                                    AllowDrop="True"
                                    Drop="DataFileDropBorder_Drop"
                                    DragEnter="DataFileDropBorder_DragEnter"
                                    DragLeave="DataFileDropBorder_DragLeave"
                                    DragOver="DataFileDropBorder_DragOver">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock x:Name="DataFileDropHint"
                                                   Text="拖拽 JSON 或 Excel 数据文件到此处"
                                                   Foreground="#95A5A6"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,5"/>
                                        <TextBlock Text="{Binding DataPath}"
                                                   Foreground="#2C3E50"
                                                   FontWeight="Medium"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0"
                                                   Visibility="{Binding DataPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            

                        </Grid>
                    </GroupBox>
                    
                    <!-- 输出设置 -->
                    <GroupBox Grid.Row="2" Header="输出设置" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,10" FontSize="16">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 输出目录 -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="输出目录:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0" FontWeight="Medium"/>
                                
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True" Margin="0,0,15,0" FontSize="14"/>
                                
                                <Button Grid.Column="2" Content="浏览..." 
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding BrowseOutputCommand}"
                                        Width="90" Height="40" FontSize="14"/>
                            </Grid>
                            

                        </Grid>
                    </GroupBox>
                    
                    <!-- 文件信息显示 - 已隐藏以节省空间 -->
                    <!--
                    <GroupBox Grid.Row="3" Header="文件信息" Style="{StaticResource GroupBoxStyle}" Height="150" FontSize="16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                            <StackPanel>
                                <TextBlock Text="{Binding FileInfoText}" 
                                           TextWrapping="Wrap" 
                                           FontFamily="Consolas" 
                                           FontSize="14" 
                                           Foreground="#34495E"/>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                    -->
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- 数据预览选项卡 -->
            <TabItem Header="数据预览" FontSize="16">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 数据统计信息 -->
                    <GroupBox Grid.Row="0" Header="数据统计" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,20" FontSize="16">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="总记录数" FontWeight="Medium" HorizontalAlignment="Center" FontSize="16"/>
                                <TextBlock Text="{Binding DataStatistics.TotalRecords}" 
                                           FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#3498DB"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="字段数量" FontWeight="Medium" HorizontalAlignment="Center" FontSize="16"/>
                                <TextBlock Text="{Binding DataStatistics.FieldCount}" 
                                           FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#27AE60"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="文件大小" FontWeight="Medium" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DataStatistics.FileSizeText}" 
                                           FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#E67E22"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="预览记录" FontWeight="Medium" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding PreviewData.Count}" 
                                           FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#9B59B6"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <!-- 数据预览表格 -->
                    <GroupBox Grid.Row="1" Header="数据预览" Style="{StaticResource GroupBoxStyle}" FontSize="16">
                        <DataGrid x:Name="PreviewDataGrid" 
                                  ItemsSource="{Binding PreviewData}"
                                  AutoGenerateColumns="True"
                                  IsReadOnly="True"
                                  GridLinesVisibility="All"
                                  HeadersVisibility="All"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  AlternatingRowBackground="#F8F9FA"
                                  Margin="15"
                                  FontSize="14"
                                  RowHeight="28">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#34495E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- 内容控件选项卡 -->
            <TabItem Header="内容控件" FontSize="16">
                <GroupBox Header="模板内容控件" Style="{StaticResource GroupBoxStyle}" Margin="10" FontSize="16">
                    <DataGrid x:Name="ContentControlsDataGrid" 
                              ItemsSource="{Binding ContentControls}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              AlternatingRowBackground="#F8F9FA"
                              Margin="15"
                              FontSize="14"
                              RowHeight="28">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="标签" Binding="{Binding Tag}" Width="150"/>
                            <DataGridTextColumn Header="标题" Binding="{Binding Title}" Width="200"/>
                            <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="当前值" Binding="{Binding Value}" Width="*"/>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </GroupBox>
            </TabItem>
        </TabControl>
        
        <!-- 进度显示区域 -->
        <GroupBox Grid.Row="2" Header="处理进度" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,10" FontSize="16">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="{Binding ProgressMessage}" 
                               VerticalAlignment="Center" FontSize="14"/>
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding ProgressText}" 
                               VerticalAlignment="Center" 
                               FontWeight="Bold" FontSize="14"/>
                </Grid>
                
                <ProgressBar Grid.Row="1" 
                             Value="{Binding ProgressPercentage}" 
                             Maximum="100" 
                             Height="25" 
                             Background="#ECF0F1" 
                             Foreground="#3498DB"/>
            </Grid>
        </GroupBox>
        
        <!-- 操作按钮区域 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" Content="开始处理" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding StartProcessCommand}"
                    Width="120" Height="45" FontSize="16" Margin="0,0,15,0"/>
            
            <Button Grid.Column="2" Content="取消处理" 
                    Style="{StaticResource ProcessButton}"
                    Command="{Binding CancelProcessCommand}"
                    Width="120" Height="45" FontSize="16" Margin="0,0,15,0"/>
            
            <Button Grid.Column="3" Content="退出" 
                    Style="{StaticResource ProcessButton}"
                    Command="{Binding ExitCommand}"
                    Width="100" Height="45" FontSize="16"/>
        </Grid>
    </Grid>
</Window>