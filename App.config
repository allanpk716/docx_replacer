<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appSettings>
        <!-- 日志配置 -->
        <add key="LogLevel" value="Information" />
        <add key="LogRetentionDays" value="30" />
        <add key="LogFilePath" value="Logs\DocuFiller_{Date}.log" />
        
        <!-- 文件处理配置 -->
        <add key="MaxFileSize" value="104857600" /> <!-- 100MB -->
        <add key="SupportedExtensions" value=".docx,.dotx" />
        <add key="DefaultOutputDirectory" value="Output" />
        
        <!-- 性能配置 -->
        <add key="MaxConcurrentProcessing" value="4" />
        <add key="ProcessingTimeout" value="300000" /> <!-- 5分钟 -->
        
        <!-- UI配置 -->
        <add key="AutoSaveSettings" value="true" />
        <add key="ShowProgressDetails" value="true" />
        <add key="ConfirmBeforeExit" value="true" />
    </appSettings>
    
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
</configuration>