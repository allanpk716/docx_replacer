<Window x:Class="DocuFiller.Views.JsonEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JSON关键词编辑器" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="12,8">
                <Button Content="新建" Command="{Binding NewProjectCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" Width="80"/>
                <Button Content="打开" Command="{Binding OpenProjectCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                <Button Content="保存" Command="{Binding SaveProjectCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                <Button Content="另存为" Command="{Binding SaveAsProjectCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                <Separator Margin="8,0"/>
                <Button Content="验证" Command="{Binding ValidateProjectCommand}" 
                        Style="{StaticResource ProcessButton}" Width="80"/>
            </StackPanel>
        </Border>
        
        <!-- 主要内容区域 -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧编辑区域 -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 项目信息 -->
                    <GroupBox Grid.Row="0" Header="项目信息" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="项目名称:" 
                                   Style="{StaticResource SubHeaderLabelStyle}" Width="80"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Content="状态:" 
                                   Style="{StaticResource SubHeaderLabelStyle}" Width="80"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding StatusMessage}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Margin="12,8"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- 关键词列表 -->
                    <GroupBox Grid.Row="1" Header="关键词列表" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 操作按钮 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Content="添加关键词" Command="{Binding AddKeywordCommand}" 
                                        Style="{StaticResource PrimaryButtonStyle}" Width="100"/>
                                <Button Content="删除选中" Command="{Binding RemoveKeywordCommand}" 
                                        Style="{StaticResource SecondaryButtonStyle}" Width="100"/>
                                <Button Content="清空列表" Command="{Binding ClearKeywordsCommand}" 
                                        Style="{StaticResource SecondaryButtonStyle}" Width="100"/>
                            </StackPanel>
                            
                            <!-- 关键词数据表格 -->
                            <DataGrid Grid.Row="1" ItemsSource="{Binding Keywords}" 
                                      SelectedItem="{Binding SelectedKeyword}"
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False" 
                                      CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      Background="{StaticResource SurfaceBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="键名" Binding="{Binding Key}" Width="150"/>
                                    <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="*"/>
                                    <DataGridTextColumn Header="来源文件" Binding="{Binding SourceFile}" Width="200"/>
                                    <DataGridTextColumn Header="状态" Binding="{Binding ValidationStatus}" Width="80" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                    
                    <!-- 验证信息 -->
                    <GroupBox Grid.Row="2" Header="验证信息" Style="{StaticResource GroupBoxStyle}" MaxHeight="120">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding ValidationMessage}" 
                                       TextWrapping="Wrap" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontFamily="Consolas" FontSize="12"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </Border>
            
            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"/>
            
            <!-- 右侧JSON预览区域 -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 预览标题 -->
                    <GroupBox Grid.Row="0" Header="JSON预览" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="格式化" Command="{Binding FormatJsonCommand}" 
                                    Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                            <Button Content="复制" Command="{Binding CopyJsonCommand}" 
                                    Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- JSON内容 -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                            CornerRadius="4" Margin="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding JsonPreview, Mode=OneWay}" 
                                     IsReadOnly="True" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     FontFamily="Consolas" 
                                     FontSize="12" 
                                     TextWrapping="NoWrap" 
                                     Padding="12"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- 统计信息 -->
                    <GroupBox Grid.Row="2" Header="统计信息" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="关键词数量:" 
                                   Style="{StaticResource SubHeaderLabelStyle}" Width="80"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding KeywordCount}" 
                                       VerticalAlignment="Center" Margin="4"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Content="有效关键词:" 
                                   Style="{StaticResource SubHeaderLabelStyle}" Width="80"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding ValidKeywordCount}" 
                                       VerticalAlignment="Center" Margin="4"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Content="JSON大小:" 
                                   Style="{StaticResource SubHeaderLabelStyle}" Width="80"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding JsonSize}" 
                                       VerticalAlignment="Center" Margin="4"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="12,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusBarMessage}" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="关闭" Command="{Binding CloseCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>